
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Category> 

<div>

    <div class="row pt-4">

        <div class="col-6">

            <h2 class="text-primary">Category List</h2>

        </div>

        <div class="col-6 text-right">

            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                
                Create a new category

            </a>

            

        </div>

        <br /> <br />

        @if(Model.Count() > 0)

            {
                
                <table class="table table-bordered table-striped" style="width:100%" >

                    <thead>
                        <tr>
                            <th>Category Name</th>
                            <th>Display Count</th>
                            <th>Button</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach(var obj in Model)
                            {
                                <tr>
                                    <td>
                                        @obj.name
                                    </td>

                                    <td>
                                        @obj.DisplayCount
                                    </td>
                                    <td>
                                        <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">Edit</a>
                                        <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">Delete Entry</a>
                                    </td>
                                </tr>

                            }
                    </tbody>



                </table>

            }

    </div>





</div>

